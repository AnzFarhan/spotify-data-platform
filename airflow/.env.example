# ========================================
# SPOTIFY DATA PLATFORM - Environment Variables
# ========================================
# Copy this file to .env and fill in your actual values
# ========================================
# SPOTIFY API CREDENTIALS
# ========================================
# Get your credentials from: https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here
SPOTIFY_REDIRECT_URI=http://127.0.0.1:8082/callback

# ========================================
# DATABASE CONFIGURATION (Docker Internal)
# ========================================
# These are used by Airflow tasks running inside Docker containers
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=airflow
POSTGRES_USER=airflow
POSTGRES_PASSWORD=your_secure_password_here

# ========================================
# DATABASE CONFIGURATION (Local Development)
# ========================================
# Use these when connecting from your host machine (outside Docker)
SPOTIFY_DB_HOST=localhost
SPOTIFY_DB_PORT=5432
SPOTIFY_DB_NAME=spotify_data_platform
SPOTIFY_DB_USER=your_db_username
SPOTIFY_DB_PASSWORD=your_db_password

# ========================================
# AIRFLOW WEB UI CREDENTIALS
# ========================================
AIRFLOW_HOME=./airflow
AIRFLOW_DAGS_FOLDER=./airflow_dags
AIRFLOW_WWW_USER_USERNAME=admin
AIRFLOW_WWW_USER_PASSWORD=your_secure_airflow_password

# ========================================
# PGADMIN WEB UI CREDENTIALS
# ========================================
# Access pgAdmin at http://localhost:5050
PGADMIN_DEFAULT_EMAIL=your_email@example.com
PGADMIN_DEFAULT_PASSWORD=your_secure_pgadmin_password
PGADMIN_CONFIG_SERVER_MODE=False
PGADMIN_CONFIG_MASTER_PASSWORD_REQUIRED=False

# ========================================
# PIPELINE SETTINGS
# ========================================
ETL_SCHEDULE=0 */1 * * *  # Hourly (cron format)
LOG_LEVEL=INFO
MAX_RETRIES=3
BATCH_SIZE=1000

# ========================================
# OPTIONAL: Advanced Settings
# ========================================
# Uncomment and modify if needed
# AIRFLOW_IMAGE_NAME=apache/airflow:3.1.0
# AIRFLOW_UID=50000
# _PIP_ADDITIONAL_REQUIREMENTS=
